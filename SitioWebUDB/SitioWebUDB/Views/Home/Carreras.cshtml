@model IEnumerable<SitioWebUDB.Models.Carrera>

@{
    ViewBag.Title = "Carreras";
}

<main>

    <div class="row mt-5">
        <h3>Carreras</h3>
    </div>

    <div class="row">
        @foreach (var carrera in Model) {
            <div class="card mt-3">
                <div class="card-header text-white bg-primary">
                    @Html.DisplayFor(modelItem => carrera.Nombre)
                </div>
                <div class="card-body">
                    <p class="card-text">@Html.DisplayFor(modelItem => carrera.Descripcion)</p>
                </div>
            </div>
        }
    </div>
</main>